<% if notice.present? %>
	<p class = "alert alert-info"><%= notice %></p>
<% end %>

<p>
	<h2>
		<%= post.title%>
	</h2>
</p>

<p>
	<% if post.kind == 'image'  %>
	<%= image_tag post.content, style: 'width: 100%' %>
		
	<% else %>
 	    <%= simple_format post.content %>
 	<% end %>
</p>

<p class ="text-muted">
	<small>
	Posted on <%= post.created_at.to_formatted_s(:long) %>
	</small>
</p>