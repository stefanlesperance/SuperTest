<% if notice.present? %>
	<p class = "alert alert-info"><%= notice %></p>
<% end %>
<p>
  <h2>
  <%= @post.title %>
  </h2>
</p>

<p>
	<% if @post.kind == 'image'  %>
		<img src = "https://upload.wikimedia.org/wikipedia/commons/6/60/BiscuitsAmerican%26British.png"/>
	<% else %>
 	    <%= simple_format post.content %>
 	<% end %>
</p>

<p class ="text-muted">
	<small>
	Posted on <%= @post.created_at.to_formatted_s(:long) %>
	</small>
</p>

